---
import Layout from "../layouts/Layout.astro";

const quickActions = [
  {
    title: "Plan your first visit",
    desc: "Location, what to expect, and how to contact us.",
    href: "/contact",
  },
  {
    title: "View upcoming events",
    desc: "Festival schedules, announcements, and reminders.",
    href: "/events",
  },
  {
    title: "Explore services",
    desc: "Weekly gathering details and puja requests.",
    href: "/services",
  },
  {
    title: "Learn our story",
    desc: "Mission, history, and community role in Sudbury.",
    href: "/about",
  },
];

const sundayService = {
  title: "Sunday Darshan and Prayer Gathering",
  time: "Typical time: 11:00 AM to 1:00 PM",
  note: "Prayers are followed by prasad and community time.",
};

const firstVisit = [
  "A respectful and welcoming environment",
  "Bhajans, prayers, and spiritual reflection",
  "Prasad and fellowship after prayers",
  "Family friendly atmosphere and newcomer friendly community",
];

const charityLine = "Registered Charity. Charity Registration Number: 119205078 RR 0001";
---

<Layout
  title="Sudbury Prarthna Samaj | Home"
  description="Sudbury Prarthna Samaj is a Hindu temple and community hub in Greater Sudbury, Ontario."
>
  <!-- HERO (simple, calm, readable) -->
  <section class="bg-slate-50">
    <div class="mx-auto max-w-6xl px-4 py-12 md:py-16">
      <div class="grid gap-10 md:grid-cols-2 md:items-center">
        <div>
          <div class="inline-flex items-center rounded-full bg-white px-3 py-1 text-sm font-semibold text-slate-700 ring-1 ring-slate-200">
            Hindu temple and community hub in Greater Sudbury
          </div>

          <h1 class="mt-4 text-4xl font-semibold tracking-tight text-slate-900 md:text-5xl">
            Sudbury Prarthna Samaj
          </h1>

          <p class="mt-4 text-base text-slate-700 md:text-lg">
            We welcome individuals and families to gather for worship, cultural celebration, learning, and fellowship.
          </p>

          <p class="mt-3 text-base text-slate-700 md:text-lg">
            We serve the Hindu community in Greater Sudbury and surrounding Northern Ontario through weekly prayers,
            festivals, and community support.
          </p>

          <div class="mt-7 flex flex-wrap gap-3">
            <a
              href="/contact"
              class="rounded-lg bg-slate-900 px-6 py-3 text-base font-semibold text-white hover:bg-slate-800"
            >
              Plan your visit
            </a>
            <a
              href="/donate"
              class="rounded-lg bg-white px-6 py-3 text-base font-semibold text-slate-900 ring-1 ring-slate-200 hover:bg-slate-100"
            >
              Donate
            </a>
          </div>
        </div>

        <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm">
          <img
            src="/images/temple.jpg"
            alt="Sudbury Prarthna Samaj temple"
            class="h-72 w-full object-cover md:h-[420px]"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- SUNDAY HIGHLIGHT + FIRST VISIT -->
  <section class="mx-auto max-w-6xl px-4 py-12">
    <div class="grid gap-6 md:grid-cols-2">
      <div class="rounded-2xl border border-slate-200 bg-white p-7 shadow-sm">
        <div class="text-sm font-semibold text-slate-600">Sunday service</div>
        <div class="mt-2 text-2xl font-semibold text-slate-900">{sundayService.title}</div>
        <div class="mt-3 text-base text-slate-700">{sundayService.time}</div>
        <div class="mt-2 text-base text-slate-700">{sundayService.note}</div>

        <a
          href="/contact"
          class="mt-6 inline-block rounded-lg bg-slate-900 px-6 py-3 text-base font-semibold text-white hover:bg-slate-800"
        >
          Ask a question
        </a>
      </div>

      <div class="rounded-2xl border border-slate-200 bg-slate-50 p-7">
        <div class="text-2xl font-semibold text-slate-900">What to expect on your first visit</div>
        <ul class="mt-4 list-disc space-y-2 pl-5 text-base text-slate-700">
          {firstVisit.map((x) => (
            <li>{x}</li>
          ))}
        </ul>

        <div class="mt-6 text-sm text-slate-600">
          For puja requests or volunteering, please use the contact page.
        </div>
      </div>
    </div>
  </section>

  <!-- QUICK ACTIONS (kept short and scannable) -->
  <section class="mx-auto max-w-6xl px-4 pb-12">
    <div class="flex items-end justify-between gap-6">
      <div>
        <h2 class="text-2xl font-semibold text-slate-900">Quick links</h2>
        <p class="mt-2 text-base text-slate-700">Start here for the most common actions.</p>
      </div>
    </div>

    <div class="mt-6 grid gap-4 sm:grid-cols-2">
      {quickActions.map((x) => (
        <a
          href={x.href}
          class="group rounded-2xl border border-slate-200 bg-white p-6 shadow-sm hover:bg-slate-50"
        >
          <div class="text-xl font-semibold text-slate-900 group-hover:underline">{x.title}</div>
          <div class="mt-2 text-base text-slate-700">{x.desc}</div>
          <div class="mt-4 text-base font-semibold text-slate-900">
            Open
          </div>
        </a>
      ))}
    </div>

    <div class="mt-10 text-sm text-slate-600">
      {charityLine}
    </div>
  </section>
</Layout>
