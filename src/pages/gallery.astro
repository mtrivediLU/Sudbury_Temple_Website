---
import Layout from "../layouts/Layout.astro";
import SectionHeading from "../components/ui/SectionHeading.astro";

const images = [
  { src: "/images/temple_img_1.jpg", alt: "Temple photo 1" },
  { src: "/images/temple_img_2.jpg", alt: "Temple photo 2" },
  { src: "/images/temple.jpg", alt: "Temple altar" },
];
---

<Layout title="Sudbury Prarthna Samaj | Gallery">
  <section class="mx-auto max-w-6xl px-4 py-12">
    <SectionHeading
      title="Gallery"
      subtitle="Add more temple photos over time. Keep images in public/images."
    />

    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {images.map((img) => (
        <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm">
          <img src={img.src} alt={img.alt} class="h-64 w-full object-cover" loading="lazy" />
        </div>
      ))}
    </div>
  </section>
</Layout>
